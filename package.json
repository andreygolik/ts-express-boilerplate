{
  "name": "ts-express-boilerplate",
  "version": "0.1.0",
  "description": "TypeScript/Express/NodeJS Server Boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreygolik/ts-express-boilerplate"
  },
  "author": "Andrey Golik <andrey@golik.us>",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production npm run serve",
    "serve": "node dist/server.js",
    "build": "npm run lint && npm run build-sass && npm run build-ts && npm run copy-static-assets",
    "build-sass": "node-sass src/public/stylesheets/main.scss dist/public/stylesheets/main.css",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node ./copyStaticAssets.ts",
    "watch": "nodemon",
    "debug": "npm run watch-debug",
    "watch-debug": "nodemon --inspect",
    "lint": "tsc --noEmit && eslint '**/*.{ts,js}' --fix",
    "test": "jest --detectOpenHandles --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^1.3.2",
    "express-rate-limit": "^5.0.0",
    "handlebars": "^4.5.1",
    "hbs": "^4.0.6",
    "helmet": "^3.21.2",
    "hpp": "^0.2.2",
    "jsonwebtoken": "^8.5.1",
    "lusca": "^1.6.1",
    "mongoose": "^5.7.6",
    "morgan": "^1.9.1",
    "node-sass-middleware": "^0.11.0",
    "nodemailer": "^6.3.1",
    "serve-favicon": "^2.5.0",
    "winston": "^3.2.1",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-mongo-sanitize": "^1.3.1",
    "@types/express-rate-limit": "^3.3.3",
    "@types/hbs": "^4.0.1",
    "@types/helmet": "0.0.37",
    "@types/hpp": "^0.2.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lusca": "^1.6.1",
    "@types/mongodb": "^3.3.6",
    "@types/mongoose": "^5.5.22",
    "@types/morgan": "^1.7.37",
    "@types/node": "^9.6.52",
    "@types/node-sass-middleware": "0.0.31",
    "@types/nodemailer": "^6.2.2",
    "@types/serve-favicon": "^2.2.31",
    "@types/shelljs": "^0.8.5",
    "@types/xss-filters": "0.0.27",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "concurrently": "^3.6.1",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "node-sass": "^4.13.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  }
}
