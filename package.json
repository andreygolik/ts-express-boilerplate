{
  "name": "ts-express-boilerplate",
  "version": "0.1.0",
  "description": "TypeScript/Express/NodeJS Server Boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreygolik/ts-express-boilerplate"
  },
  "author": "Andrey Golik",
  "private": false,
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "build": "npm run build-sass && npm run build-ts && npm run copy-static-assets",
    "build-sass": "node-sass src/public/styles/main.scss dist/public/styles/main.css",
    "build-ts": "tsc",
    "copy-static-assets": "ts-node utils/copyStaticAssets.ts",
    "watch": "npm run build && npm run watch-all",
    "watch-all": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-sass": "node-sass -w src/public/styles/main.scss dist/public/styles/main.css",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "debug": "npm run build && npm run watch-debug",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "serve-debug": "nodemon --inspect dist/server.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-validator": "^6.2.0",
    "hbs": "^4.0.6",
    "helmet": "^3.21.1",
    "lusca": "^1.6.1",
    "morgan": "^1.9.1",
    "serve-favicon": "^2.5.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/hbs": "^4.0.1",
    "@types/helmet": "0.0.37",
    "@types/lusca": "^1.6.1",
    "@types/morgan": "^1.7.37",
    "@types/node": "^9.6.52",
    "@types/serve-favicon": "^2.2.31",
    "@types/shelljs": "^0.8.5",
    "concurrently": "^3.6.1",
    "node-sass": "^4.12.0",
    "shelljs": "^0.8.3",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  }
}
