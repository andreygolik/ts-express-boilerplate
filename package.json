{
  "name": "ts-express-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript/Express/NodeJS Server Boilerplate",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreygolik/ts-express-boilerplate"
  },
  "author": "Andrey Golik",
  "private": false,
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-sass && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "build-sass": "node-sass src/public/styles/style.scss dist/public/styles/style.css",
    "watch-sass": "node-sass -w src/public/styles/style.scss dist/public/styles/style.css",
    "lint": "npm run tslint",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "express-validator": "^4.3.0",
    "helmet": "^3.9.0",
    "lusca": "^1.5.2",
    "morgan": "^1.9.0",
    "nconf": "^0.10.0",
    "serve-favicon": "^2.4.5",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.0",
    "@types/helmet": "^0.0.37",
    "@types/jest": "^22.0.1",
    "@types/jquery": "^3.2.18",
    "@types/lusca": "^1.5.0",
    "@types/morgan": "^1.7.35",
    "@types/nconf": "^0.0.37",
    "@types/node": "^9.3.0",
    "@types/serve-favicon": "^2.2.30",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.7",
    "concurrently": "^3.5.1",
    "jest": "^22.1.4",
    "node-sass": "^4.7.2",
    "shelljs": "^0.8.0",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [ "ts", "js", "json" ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/tests/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
